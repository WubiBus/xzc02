<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05999999" >

    <RelativeLayout
        android:id="@+id/rl_me"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:layout_marginTop="3dp">

        <cn.incorner.contrast.view.CircleImageView
            android:id="@+id/iv_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_gray_3"
            android:textSize="8dp"
            android:alpha="0.8"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape__oval__stroke_gray"
            android:gravity="center"
            android:padding="2dp"
            android:text=""
            android:textColor="#D7DF01"
            android:textSize="@dimen/title_text_xxs"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/iv_sendprivate"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_image"
            android:baselineAlignBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/send_private"
            android:alpha="0.4"/>
    </RelativeLayout>

</RelativeLayout>