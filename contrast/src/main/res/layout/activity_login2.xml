<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_main_right"
        android:layout_width="260dip"
        android:layout_height="420dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-60dip"
        android:layout_marginTop="-30dip" >

        <cn.incorner.contrast.view.SweepingView
            android:layout_width="260dip"
            android:layout_height="260dip"
            android:layout_centerInParent="true"
            android_custom:roundColor="@color/login_yellow"
            android_custom:roundWidth="30dip" />

        <LinearLayout
            android:id="@+id/ll_login_password"
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:digits="@string/password_digits"
                android:gravity="center"
                android:hint="您的密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="#d4d77f"
                android:textColorHint="#d4d77f"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_register_password"
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:digits="@string/password_digits"
                android:gravity="center"
                android:hint="设置密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="#d4d77f"
                android:textColorHint="#d4d77f"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize_normal" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:digits="@string/password_digits"
                android:gravity="center"
                android:hint="再次输入密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="#d4d77f"
                android:textColorHint="#d4d77f"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize_normal" />

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:gravity="center"
                android:hint="短信验证码"
                android:imeOptions="actionDone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="#d4d77f"
                android:textColorHint="#d4d77f"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_main_left"
        android:layout_width="420dip"
        android:layout_height="420dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-200dip"
        android:layout_marginTop="-30dip" >

        <cn.incorner.contrast.view.SweepingView
            android:layout_width="420dip"
            android:layout_height="420dip"
            android_custom:roundColor="@color/login_red"
            android_custom:roundWidth="35dip" />

        <LinearLayout
            android:id="@+id/ll_login_username"
            android:layout_width="170dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dip"
            android:gravity="center_horizontal"
            android:visibility="visible" >

            <EditText
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:hint="手机号/邮箱/大名"
                android:imeOptions="actionNext"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/text_gray_2"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize_normal" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_register_username"
            android:layout_width="170dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dip"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <EditText
                android:id="@+id/et_register_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:hint="您的手机号/邮箱"
                android:imeOptions="actionNext"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/text_gray_2"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize_normal" />

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:gravity="center"
                android:hint="您的大名"
                android:imeOptions="actionDone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/text_gray_2"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_send_verify_code"
            android:layout_width="170dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dip"
            android:layout_marginTop="100dip"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_send_verify_code"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:background="@drawable/shape__oval__stroke_gray"
                android:gravity="center"
                android:text="发送短信验证码"
                android:textColor="#a0000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_anonymous_login"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="210dip"
            android:layout_marginTop="45dip"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:visibility="visible" >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:contentDescription="@null"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_board_back" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape__oval__stroke_gray"
            android:text="登录"
            android:textColor="#a0000000"
            android:textSize="12sp"
            android:visibility="gone" />
        
         <Button
            android:id="@+id/btn_register"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape__oval__stroke_gray"
            android:text="注册"
            android:textColor="#a0000000"
            android:textSize="12sp" 
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_thirdparty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- 微信 -->

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:src="@drawable/third_weixin" />

            <!-- qq -->

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/third_qq" />

            <!-- 微博 -->

            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@null"
                android:src="@drawable/third_weibo"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forgetpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@color/text_gray_3" />

        <!-- 协议 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="*登录或注册代表您已经阅读并同意无比™用户协议"
            android:textColor="@color/text_gray_2"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contrast by Implication"
            android:textColor="@color/text_gray_2"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>