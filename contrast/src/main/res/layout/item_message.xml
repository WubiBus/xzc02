<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <cn.incorner.contrast.view.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:contentDescription="@null"
        android:src="@drawable/default_avatar"
        android:layout_marginTop="4dp"
        android:layout_marginRight="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="vertical" >

        <!-- 消息类型 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_msg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:singleLine="true"
                android:text="徐志超关注了你的大作"
                android:textColor="@color/black"
                android:textSize="9sp"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:alpha="0.6"
                android:singleLine="true"
                android:text="2016-03-14 13:51:00"
                android:textColor="@color/black"
                android:textSize="9sp"
                />
            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:alpha="0.6"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="9sp" />
        </LinearLayout>

        <!-- 描述内容 -->

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="描述"
            android:textColor="@color/black"
            android:textSize="12sp"

             />

        <TextView
            android:id="@+id/tv_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="描述3"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tv_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:singleLine="true"
            android:text="徐志超关注了你的大作"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="-13dp"
            android:visibility="gone"
            />

        <!-- 内容 -->

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:alpha="0.9"
            android:text="评论内容"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="visible"/>

        <!-- 图片 -->

        <RelativeLayout
            android:id="@+id/rl_image_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp" >

            <LinearLayout
                android:id="@+id/ll_image_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/iv_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@null" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_compatible_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>