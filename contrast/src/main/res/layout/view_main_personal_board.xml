<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        
        <!-- 上面部分 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            
            <cn.incorner.contrast.view.CircleImageView
                android:id="@+id/civ_head"
                android:contentDescription="@null"
                android:layout_marginTop="18dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />
            
            <!-- 昵称和什么 -->
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="三皮" />
                
                <TextView
                    android:layout_toRightOf="@id/tv_nickname"
                    android:layout_alignBaseline="@id/tv_nickname"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#ff727171"
                    android:text="钟点工" />
            </RelativeLayout>
            
            <!-- 时间 -->
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff727171"
                android:textSize="12sp"
                android:text="1971-01-01" />
            
            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff727171"
                android:textSize="16sp"
                android:text="善意的力量" />
        </LinearLayout>
        
        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/gray" />
        
        <!-- 中间部分 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <!-- 对比度 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff727171"
                    android:textSize="14sp"
                    android:text="2" />
                
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:text="对比度" />
            </LinearLayout>
            
            <!-- 关注 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff727171"
                    android:textSize="14sp"
                    android:text="65" />
                
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:text="关注" />
            </LinearLayout>
            
            <!-- 被关注 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff727171"
                    android:textSize="14sp"
                    android:text="16" />
                
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:text="被关注" />
            </LinearLayout>
            
            <!-- 好友 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff727171"
                    android:textSize="14sp"
                    android:text="23" />
                
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:text="好友" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/gray" />
        
        <!-- 下面部分 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="29dp"
            android:paddingBottom="70dp"
            android:gravity="center_horizontal">
            
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <!-- 修改密码 -->
                <Button
                    android:id="@+id/btn_update_password"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="88dp"
                    android:layout_height="27dp"
                    android:background="#ff009fa8"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="修改密码" />
                
                <!-- 设置 -->
                <Button
                    android:id="@+id/btn_setting"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="60dp"
                    android:layout_height="27dp"
                    android:background="#ffec6800"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="设置" />
                
                <!-- 注销 -->
                <Button
                    android:id="@+id/btn_log_off"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="60dp"
                    android:layout_height="27dp"
                    android:background="#ff3b5e66"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="注销" />
            </LinearLayout>
            
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <!-- 推荐给好友 -->
                <Button
                    android:id="@+id/btn_recommend"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="90dp"
                    android:layout_height="27dp"
                    android:background="#ffe83828"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="推荐给好友" />
                
                <!-- 联系对比度 -->
                <Button
                    android:id="@+id/btn_contact"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="90dp"
                    android:layout_height="27dp"
                    android:background="#ff616d56"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="联系对比度" />
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>
