<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- temp -->


    <!-- 横线 -->
    <style name="horizontal_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 竖线 -->
    <style name="vertical_Line">
        <item name="android:layout_width">0.8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- TextView 样式 -->
    <style name="TextView_normal_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_large_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_large_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_normal_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_normal_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_small_gary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_small_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_small_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
        <item name="android:windowEnterAnimation">@anim/push_bottom</item>
    </style>

    <!-- 半透明背景style -->
    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="my_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/selector_checked</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="My_RadioButton_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_black_gray</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 自定义底部弹出窗口 -->
    <style name="style_share_board_window">
        <item name="android:windowEnterAnimation">@anim/anim_share_board_window_show</item>
        <item name="android:windowExitAnimation">@anim/anim_share_board_window_dismiss</item>
    </style>

    <style name="style_desc_normal_large">
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_desc_normal_medium">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_desc_normal_small">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_desc_comment">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="style_desc_url">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="mulit_tab_layout" parent="Base.Widget.Design.TabLayout">
        <item name="android:tabStripEnabled">false</item>
        <item name="tabPaddingStart">5dp</item>
        <item name="tabPaddingEnd">5dp</item>
    </style>

</resources>